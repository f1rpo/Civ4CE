		<fDefineFloatVal>0</fDefineFloatVal>
	</Define>
	<Define>
		<DefineName>CAMERA_CITY_NO_PITCH</DefineName>
		<iDefineIntVal>1</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>CAMERA_SPECIAL_PITCH</DefineName>
		<fDefineFloatVal>-90.0</fDefineFloatVal>
	</Define>
	<Define>
		<DefineName>ROUTE_Z_BIAS</DefineName>
		<fDefineFloatVal>3</fDefineFloatVal>
	</Define>
	<Define>
		<DefineName>RIVER_Z_BIAS</DefineName>
		<fDefineFloatVal>3</fDefineFloatVal>
	</Define>
	<Define>
		<DefineName>MINIMAP_RENDER_SIZE</DefineName>
		<iDefineIntVal>512</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>MINIMAP_PARABOLA_MIN_X_PERCENT</DefineName>
		<fDefineFloatVal>0.16</fDefineFloatVal>
	</Define>
	<Define>
		<DefineName>MINIMAP_PARABOLA_MIN_Y_PERCENT</DefineName>
		<fDefineFloatVal>0.32</fDefineFloatVal>
	</Define>
	<Define>
		<DefineName>MINIMAP_PARABOLA_Y_INTERCEPT_PERCENT</DefineName>
