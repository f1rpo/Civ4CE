		<iDefineIntVal>5</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>DEFAULT_ANIM_PAGE_MAX</DefineName>
		<!--Default number of animations loaded for an entity-->
		<iDefineIntVal>2</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>FLAG_OFFSET_X</DefineName>
